{% form: "cart", cart %}
    <h1>Cart</h1>
    {% if cart.empty? %}
        <p>Your cart is empty, happy shopping!</p>
    {% else %}
        {% for item in cart.items %}
            <div>
                {{ item.image | image_url: width: 200 | image_tag }}
                <h1>{{ item.title }}</h1>
                <p>{{ item.final_line_price | money }}</p>
                <input name="updates[]" value="{{ item.quantity }}">
                <a href="{{ item.url_to_remove }}">Remove Item</a>
                <button type="submit" name="update">Update Item</button>
            </div>
        {% endfor %}

        <p>Total: {{ cart.total_price }}</p>

        <button type="submit" name="checkout">Checkout</button>
    {% endif %}
{% endform %}
